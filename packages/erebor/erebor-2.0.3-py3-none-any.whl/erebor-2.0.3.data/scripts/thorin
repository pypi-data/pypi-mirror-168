#!python

import sys
import shlex
import socket

if len(sys.argv) < 2:
    print("usage: thorin <message>")
    sys.exit(0)

sock = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
sock.connect(("127.0.0.1", 8044))

def erebor(message):
    sock.send(message.encode())
    return sock.recv(64000).decode().strip()

message = " ".join(map(shlex.quote, sys.argv[1:]))
print(erebor(message))
